# إعدادات الخادم
PORT=3001
NODE_ENV=development

# قاعدة البيانات
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ms_main_db?retryWrites=true&w=majority

# المصادقة
JWT_SECRET=change_this_to_a_secure_random_string
JWT_EXPIRES_IN=30d

# حساب المسؤول الافتراضي
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here

# خدمة الرسائل (Twilio - للإنتاج)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# إعدادات التطبيق
MAX_FILE_SIZE=5242880 # 5 ميجابايت بالبايت
MAX_IMAGES_PER_REPORT=5 